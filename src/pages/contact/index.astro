---
import SocialMedia from "../../components/SocialMedia.astro";
import Layout from "../../layouts/Layout.astro";
import { ContactForm } from "../../react-components";

---

<Layout metaTitle="Portfolio | Contact">
  <section id="contact" class="py-24 bg-gray-900 text-gray-100 min-h-screen">
    <div class="max-w-4xl mx-auto px-4 flex flex-col md:flex-row gap-12">
      
      <!-- Left: Contact Form -->
      <div class="flex-1">
        <h2 class="text-3xl md:text-4xl font-bold text-violet-400 mb-6">
          Contact Me
        </h2>
        <p class="text-gray-400 mb-6">
          Have a project in mind or just want to say hi? Fill out the form below and I'll get back to you!
        </p>
        <ContactForm />
      </div>

      <!-- Right: Social Links -->
      <div class="flex-1 flex flex-col items-center md:items-start justify-start gap-6">
        <h3 class="text-2xl font-semibold text-violet-400 mb-4">Connect with me</h3>
        <p class="text-gray-400">
          You can also reach out via my social media platforms:
        </p>
        <SocialMedia class="flex flex-col gap-4 mt-4" />
      </div>

    </div>
  </section>
</Layout>
