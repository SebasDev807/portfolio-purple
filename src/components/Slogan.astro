---
import { Icon } from "astro-icon/components";

interface SloganProps {
    leftQuote?: boolean;
}

const { leftQuote = true }: SloganProps = Astro.props;
---

<div class="flex items-center justify-center mt-10 px-6">
    <!-- Left Quote -->

    <!-- Slogan -->
    <div class="flex">
        {leftQuote && <Icon name="left-quote" size="50" />}

        <h4
            class="italic text-center text-lg md:text-xl font-medium px-10 text-gray-200"
        >
            Build small daily wins, and watch them grow into a lifetime of
            achievements
        </h4>
        <Icon name="right-quote" size="50" />
    </div>

    <!-- Right Quote -->
</div>
