---
import { Icon } from "astro-icon/components";
import Slogan from "./Slogan.astro";
import SocialMedia from "./SocialMedia.astro";
---

<section class="pt-32 pb-32 bg-gray-900 text-gray-100 px-6 md:px-20">
  <div class="flex flex-col md:flex-row items-center justify-center">
    <!-- Left: Text content -->
    <div class="md:w-1/2 space-y-6 md:pr-16">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold text-violet-400">
        Juan Sebastián
      </h2>

      <div class="flex items-center space-x-2 text-gray-400 text-lg md:text-xl">
        <Icon name="location" class="h-5 w-5 text-violet-400" />
        <span class="text-[15px] md:text-base">Medellín, Antioquia</span>
      </div>

      <p class="text-gray-300 text-base md:text-lg lg:text-xl leading-relaxed">
        Full-stack developer specialized in <span
          class="font-semibold text-primary-400">TypeScript</span
        >, <span class="font-semibold text-primary-400">Java</span>, <span
          class="font-semibold text-primary-400">React</span
        >, <span class="font-semibold text-primary-400">Next.js, NestJS</span>, <span
          class="font-semibold text-primary-400">Astro</span
        >, and <span class="font-semibold text-primary-400">React Native</span>.
        Passionate about creating clean, modern, and scalable web applications.
      </p>

      <Slogan />

      <SocialMedia />
    </div>

    <!-- Right: Photo -->
    <div class="md:w-1/2 mt-10 md:mt-0 flex justify-center">
      <div
        class="w-80 h-80 md:w-96 md:h-96 lg:w-md lg:h-md bg-gray-700 rounded-xl overflow-hidden shadow-xl"
      >
        <img
          src="/me.png"
          alt="Juan Sebastián"
          class="object-cover w-full h-full"
        />
      </div>
    </div>
  </div>
</section>
